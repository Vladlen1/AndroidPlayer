<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:id="@+id/image_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/music_name"
        android:layout_below="@+id/image_name"
        android:layout_alignParentLeft="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last"
            android:id="@+id/last"
            android:layout_below="@+id/music_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="47dp" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/stop_btn"
            android:layout_alignTop="@+id/start_btn"
            android:layout_toRightOf="@+id/music_name"
            android:layout_toLeftOf="@+id/start_btn"
            android:layout_toStartOf="@+id/start_btn" />

        <ImageButton
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/start_btn"
            android:layout_alignTop="@+id/last"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/next"
            android:layout_alignTop="@+id/next"
            android:layout_toRightOf="@+id/music_name"
            android:layout_toEndOf="@+id/music_name" />
    </LinearLayout>

</RelativeLayout>